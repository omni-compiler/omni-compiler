XFC     = xmpf90
XRUN    = mpiexec
TESTS = $(wildcard *.f90)
EXES  = $(TESTS:.f90=.x)
OBJS  = $(TESTS:.f90=.o)

.PHONY: clean all run submit showlog cleanlog

all: $(EXES)

.SUFFIXES: .x .f90

.f90.x:
	$(XFC) -o $@ $<

run: full.x
	$(XRUN) -n 2 ./full.x
	$(XRUN) -n 8 ./ordinal_reflect.x
	$(XRUN) -n 4 ./full2.x
	$(XRUN) -n 4 ./full3.x
	$(XRUN) -n 16 ./reduce_shadow.x
#	$(XRUN) -n 4 ./issue41.x
#	$(XRUN) -n 1 ./40.x

RUN:
	mkdir RUN

RUN/%.x:: %.x
	cp $< $@

RUN/go.sh: go.template Makefile
	cp $< $@ && grep XRUN Makefile | sed -e 's/(XRUN)/{XRUN}/' -e 's/ *= */=/' | grep -v Makefile >>$@

submit: all RUN RUN/go.sh $(EXES:%=RUN/%)
	cd RUN; pjsub go.sh

showlog:
	cat RUN/go.sh.e* RUN/go.sh.o*

cleanlog:
	rm -rf RUN

clean: cleanlog
	rm -f $(EXES) $(OBJS)

