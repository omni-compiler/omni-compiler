	    ;;
	*ICC*)
	    # OpenMP
	    OPENMP_OPT_C="-fopenmp"

	    # XcalableMP
	    XMPC_DEF="-D_XCALABLEMP"

	    # MPI C
	    ver=`$MPI_CC --version 2> /dev/null | head -n1`
	    case $ver in
