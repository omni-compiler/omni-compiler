	    OMNI_X2X_FLAGS="-intel"
	    ;;
	*)
	    chk2=`$MPI_CC --version 2> /dev/null | head -n2 | tail -n1`
	    case $chk2 in
		pgcc*)
		    # OpenMP
		    OPENMP_OPT_C="-mp"

		    # XcalableMP
		    XMPC_DEF="-D_XCALABLEMP"

		    # MPI C
		    MPI_CPPFLAGS="-E -c99"
		    MPI_CFLAGS="-fast -c99 $OPENMP_OPT_C" 
