genJARjdk () {
    @JARCOM@ cf ${target} $*
}

genJARkaffe () {
    TMPDIR=/tmp/.genjar.$$
    rm -rf ${TMPDIR}
    mkdir ${TMPDIR}
    tar cpf - $* | ( cd ${TMPDIR}; tar xpf - )
    (cd ${TMPDIR}; @ZIPCOM@ -q -DX -r ${target} .)
    mv ${TMPDIR}/${target} .
    rm -rf ${TMPDIR}
}

target=$1
shift

isKaffe=@isKaffe@
useGcj=@doGcjBackend@
if test "x${isKaffe}" = "xyes" -o "x${useGcj}" = "xyes"; then
    genJARkaffe ${1+"$@"}
else
    genJARjdk ${1+"$@"}
fi
exit 0

